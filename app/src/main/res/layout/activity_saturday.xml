<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.uy.allstartapp.Saturday">

    <TextView
        android:textColor="black"
        android:layout_marginTop="15dp"
        android:paddingLeft="45dp"
        android:id="@+id/hey"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Hey, " />

    <TextView
        android:textColor="black"
        android:id="@+id/here"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="45dp"
        android:layout_below="@+id/hey"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:includeFontPadding="true"
        android:text="Here is your class schedule!"
        android:paddingBottom="15dp"/>

    <View
        android:layout_below="@+id/here"
        android:id="@+id/rectangle_at_the_top"
        android:layout_centerInParent="true"
        android:paddingTop="20dp"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="#ECE0FA"
        android:visibility="visible"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SATURDAY"
        android:layout_alignBaseline="@id/rectangle_at_the_top"
        android:layout_marginTop="87dp"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="black"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:src="@drawable/rightbutton"/>

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="90dp"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:src="@drawable/leftbutton"/>

    <View
        android:id="@+id/rectangle_at_the_top2"
        android:layout_centerInParent="true"
        android:layout_below="@id/rectangle_at_the_top"
        android:layout_width="350dp"
        android:layout_height="370dp"
        android:background="#ECE0FA"
        android:visibility="visible"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="25dp"
        android:layout_centerInParent="true"
        android:src="@drawable/sundayaddbtn"/>

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100dp"
        android:src="@drawable/calendarbtn"/>

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:src="@drawable/todobtn"/>

</RelativeLayout>
