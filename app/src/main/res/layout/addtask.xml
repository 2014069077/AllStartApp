<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">





    <View
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="#e2e2e2"
        android:visibility="visible"
        android:textAlignment="center"
        android:id="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TASKS"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="black"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/text"
        android:layout_alignBottom="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="425dp"
        android:background="#e2e2e2"
        android:visibility="visible"
        android:textAlignment="center"
        />

    <View
        android:id="@+id/inside_addtask"
        android:layout_marginTop="115dp"
        android:layout_centerHorizontal="true"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:background="#c6c6c6"
        android:visibility="visible"
        android:textAlignment="center"
        />

    <View
        android:id="@+id/inside_task1"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:visibility="visible"
        android:layout_below="@+id/inside_addtask"
        android:textAlignment="center"
        />

    <View
        android:id="@+id/inside_task2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="325dp"
        android:layout_below="@+id/inside_task1"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:visibility="visible"
        android:textAlignment="center"
        />
    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100dp"
        android:src="@drawable/calendarbtn"
        android:id="@+id/imageButton2" />




    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:src="@drawable/todobtn"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/add"

        android:scaleType="fitCenter"
        android:id="@+id/imageButton"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_above="@+id/inside_task1"
        android:layout_alignLeft="@+id/inside_addtask"
        android:layout_alignStart="@+id/inside_addtask" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add tasks"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="black"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="9dp"
        android:layout_above="@+id/inside_task1"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />
</RelativeLayout>